{
  "name": "pr-scan-action",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action for Secret and SCA scan on pull request",
  "scripts": {
    "test": "node test/app.test.ts",
    "build": "rm -rf dist;ncc build index.ts -o dist"
  },
  "author": "Animesh Raj https://itsarraj.me)",
  "license": "ISC",
  "repository": "github:itsarraj/pr-scan-action",
  "dependencies": {
    "@octokit/request": "^9.1.3",
    "@octokit/rest": "^21.0.2",
    "@probot/adapter-github-actions": "^4.0.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-class-properties": "^7.25.7",
    "@semantic-release/git": "^10.0.1",
    "@vercel/ncc": "^0.38.2",
    "eslint": "^9.13.0",
    "nock": "^13.5.5",
    "semantic-release": "^24.1.3",
    "typescript": "^5.6.3",
    "uvu": "^0.5.6"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist/index.js"
          ],
          "message": "build(release): compiled action for ${nextRelease.version}\n\n[skip ci]"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
